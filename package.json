{
  "name": "tings-monorepo",
  "private": true,
  "license": "MIT",
  "workspaces": [
    "website",
    "package"
  ],
  "scripts": {
    "build": "npm run build -w tings && npm run build -w website",
    "dev": "concurrently 'npm run dev -w website' 'npm run dev -w tings' -n web,lib -c blue,magenta",
    "lint": "ESLINT_USE_FLAT_CONFIG=true eslint -c eslint.config.mjs .",
    "prepare": "husky install",
    "test": "npm test -ws --if-present"
  },
  "lint-staged": {
    "*.{css,json,md}": [
      "prettier --write"
    ],
    "*.{js,jsx,ts,tsx,cjs,mjs}": [
      "cross-env ESLINT_USE_FLAT_CONFIG=true eslint -c eslint.config.mjs --fix"
    ]
  },
  "prettier": "@will-stone/prettier-config",
  "devDependencies": {
    "@changesets/cli": "^2.26.1",
    "@will-stone/eslint-config": "^0.2.0",
    "@will-stone/prettier-config": "^6.0.4",
    "concurrently": "^8.0.1",
    "cross-env": "^7.0.3",
    "eslint": "^8.36.0",
    "husky": "^8.0.3",
    "lint-staged": "^13.2.0",
    "prettier": "^2.8.6"
  }
}
