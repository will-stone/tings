{
  "name": "tings-monorepo",
  "private": true,
  "license": "MIT",
  "type": "module",
  "workspaces": [
    "website",
    "package"
  ],
  "scripts": {
    "build": "npm run build -w tings && npm run build -w website",
    "dev": "concurrently 'npm run dev -w website' 'npm run dev -w tings' -n web,lib -c blue,magenta",
    "lint": "eslint .",
    "prepare": "husky install",
    "test": "npm test -ws --if-present"
  },
  "lint-staged": {
    "*.{css,json,md}": [
      "prettier --write"
    ],
    "*.{js,jsx,ts,tsx,cjs,mjs}": [
      "eslint --fix"
    ]
  },
  "devDependencies": {
    "@changesets/cli": "^2.26.2",
    "@will-stone/eslint-config": "^0.12.1",
    "@will-stone/prettier-config": "^7.0.2",
    "concurrently": "^8.2.2",
    "cross-env": "^7.0.3",
    "eslint": "^8.54.0",
    "husky": "^8.0.3",
    "lint-staged": "^15.1.0",
    "prettier": "^3.1.0",
    "prettier-plugin-astro": "^0.12.2"
  }
}
