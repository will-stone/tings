{
  "name": "tings",
  "version": "0.0.19",
  "private": false,
  "description": "A collection of small utilities and Lodash addons",
  "bugs": {
    "url": "https://github.com/will-stone/tings/issues",
    "email": "email@wstone.io"
  },
  "repository": {
    "url": "https://github.com/will-stone/tings"
  },
  "license": "MIT",
  "author": {
    "name": "Will Stone",
    "email": "email@wstone.io",
    "url": "https://wstone.io"
  },
  "main": "./index.js",
  "scripts": {
    "build": "yarn build:code && yarn build:docs",
    "build:code": "tsc",
    "build:docs": "yarn generate-typedoc && cd docs-src && next build && next export --outdir ../docs",
    "clean": "rimraf ./dist ./docs",
    "copy-files": "cpy README.md dist/ && cpy package.json dist/",
    "generate-typedoc": "typedoc --json docs-src/.data/typedoc.json",
    "lint": "eslint . --ignore-path .gitignore",
    "release": "yarn clean && yarn lint && yarn build && np --contents=dist",
    "start:docs": "yarn generate-typedoc && cd docs-src && next dev",
    "test": "uvu -r ts-node/register tests",
    "test:watch": "watchlist src tests -- yarn test",
    "typecheck": "tsc --noEmit",
    "postversion": "yarn copy-files"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{css,json,md}": [
      "prettier --write"
    ],
    "*.{js,jsx,ts,tsx}": [
      "eslint --fix"
    ]
  },
  "prettier": "@will-stone/prettier-config",
  "eslintConfig": {
    "extends": [
      "@will-stone/eslint-config",
      "@will-stone/eslint-config/node",
      "@will-stone/eslint-config/react",
      "@will-stone/eslint-config/typescript"
    ]
  },
  "devDependencies": {
    "@tailwindcss/typography": "^0.2.0",
    "@types/lodash": "^4.14.159",
    "@types/react": "^16.9.49",
    "@types/sinon": "^9.0.5",
    "@will-stone/eslint-config": "^1.21.0",
    "@will-stone/prettier-config": "^3.1.0",
    "cpy-cli": "^3.1.1",
    "eslint": "^7.7.0",
    "gh-pages": "^3.1.0",
    "husky": "^4.2.5",
    "lint-staged": "^10.2.11",
    "next": "^9.5.3",
    "np": "^6.3.2",
    "prettier": "^2.0.5",
    "react": "^16.13.1",
    "react-dom": "^16.13.1",
    "react-markdown": "^4.3.1",
    "react-syntax-highlighter": "^13.5.3",
    "rimraf": "^3.0.2",
    "sinon": "^9.0.3",
    "tailwindcss": "^1.7.6",
    "ts-node": "^8.10.2",
    "typedoc": "^0.18.0",
    "typedoc-plugin-markdown": "^2.4.2",
    "typescript": "^4.0.2",
    "uvu": "^0.3.3",
    "watchlist": "^0.2.3"
  },
  "peerDependencies": {
    "lodash": "^4.17.20"
  },
  "peerDependenciesMeta": {
    "lodash": {
      "optional": true
    }
  },
  "publishConfig": {
    "access": "public"
  }
}
