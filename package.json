{
  "name": "tings-monorepo",
  "private": true,
  "license": "MIT",
  "workspaces": [
    "website",
    "package"
  ],
  "scripts": {
    "build": "npm run build -w tings && npm run build -w website",
    "dev": "npm run dev --workspaces --if-present",
    "lint": "eslint . --ext .js,.jsx,.ts,.tsx,.mjs,.cjs",
    "prepare": "husky install",
    "test": "npm test --workspaces --if-present"
  },
  "lint-staged": {
    "*.{css,json,md}": [
      "prettier --write"
    ],
    "*.{js,jsx,ts,tsx,cjs,mjs}": [
      "eslint --fix"
    ]
  },
  "prettier": "@will-stone/prettier-config",
  "devDependencies": {
    "@changesets/cli": "^2.24.2",
    "@will-stone/eslint-config-base": "^2.0.0",
    "@will-stone/eslint-config-node": "^2.0.0",
    "@will-stone/eslint-config-prettier": "^2.0.1",
    "@will-stone/eslint-config-react": "^2.1.0",
    "@will-stone/eslint-config-typescript": "^2.1.0",
    "@will-stone/prettier-config": "^6.0.2",
    "eslint": "^8.21.0",
    "eslint-plugin-astro": "^0.16.0",
    "eslint-plugin-tailwindcss": "^3.6.0",
    "husky": "^8.0.1",
    "lint-staged": "^13.0.3",
    "prettier": "^2.7.1",
    "prettier-plugin-astro": "^0.3.0"
  }
}
