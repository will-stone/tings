{
  "name": "tings-monorepo",
  "private": true,
  "license": "MIT",
  "workspaces": [
    "website",
    "package"
  ],
  "scripts": {
    "build": "npm run build -w tings && npm run build -w website",
    "dev": "npm run dev -ws --if-present",
    "lint": "eslint . --ext .js,.jsx,.ts,.tsx,.mjs,.cjs",
    "prepare": "husky install",
    "test": "npm test -ws --if-present"
  },
  "lint-staged": {
    "*.{css,json,md}": [
      "prettier --write"
    ],
    "*.{js,jsx,ts,tsx,cjs,mjs}": [
      "eslint --fix"
    ]
  },
  "prettier": "@will-stone/prettier-config",
  "devDependencies": {
    "@changesets/cli": "^2.26.0",
    "@will-stone/eslint-config-base": "^7.0.2",
    "@will-stone/eslint-config-node": "^2.0.1",
    "@will-stone/eslint-config-prettier": "^2.0.3",
    "@will-stone/eslint-config-react": "^3.0.1",
    "@will-stone/eslint-config-typescript": "^5.1.0",
    "@will-stone/prettier-config": "^6.0.4",
    "eslint": "^8.35.0",
    "eslint-plugin-tailwindcss": "^3.10.1",
    "husky": "^8.0.3",
    "lint-staged": "^13.1.2",
    "prettier": "^2.8.4"
  }
}
