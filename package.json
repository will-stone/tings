{
  "name": "tings",
  "version": "4.1.1",
  "private": false,
  "description": "A collection of small JavaScript utilities",
  "homepage": "https://tings.wstone.uk/",
  "bugs": {
    "url": "https://github.com/will-stone/tings/issues"
  },
  "repository": {
    "url": "https://github.com/will-stone/tings"
  },
  "license": "MIT",
  "author": {
    "name": "Will Stone",
    "email": "hello@wstone.uk",
    "url": "https://wstone.uk"
  },
  "sideEffects": false,
  "main": "./lib/index.js",
  "files": [
    "lib"
  ],
  "scripts": {
    "build": "rimraf ./lib && tsc --noEmit false",
    "build-and-test": "npm run build && npm run test",
    "build:docs": "rimraf ./docs && npm run generate-typedoc && astro build",
    "dev:docs": "npm run generate-typedoc && astro dev",
    "generate-typedoc": "rimraf ./website/data/typedoc.json && typedoc",
    "lint": "eslint . --ext .js,.jsx,.ts,.tsx,.mjs,.cjs",
    "prepare": "husky install",
    "release": "npm run lint && npm run build && np",
    "test": "uvu -r esm ./tests",
    "test:watch": "watchlist source tests -- npm run build-and-test",
    "typecheck": "tsc --noEmit",
    "version": "npm run build:docs && git add docs"
  },
  "lint-staged": {
    "*.{css,json,md}": [
      "prettier --write"
    ],
    "*.{js,jsx,ts,tsx}": [
      "eslint --fix"
    ]
  },
  "prettier": "@will-stone/prettier-config",
  "devDependencies": {
    "@astrojs/react": "^0.4.2",
    "@astrojs/tailwind": "^0.2.5",
    "@tailwindcss/typography": "^0.5.4",
    "@types/react": "^18.0.15",
    "@types/sinon": "^10.0.13",
    "@will-stone/eslint-config-base": "^2.0.0",
    "@will-stone/eslint-config-node": "^2.0.0",
    "@will-stone/eslint-config-prettier": "^2.0.1",
    "@will-stone/eslint-config-react": "^2.1.0",
    "@will-stone/eslint-config-typescript": "^2.1.0",
    "@will-stone/prettier-config": "^6.0.2",
    "astro": "^1.0.0-rc.5",
    "eslint": "^8.21.0",
    "eslint-plugin-tailwindcss": "^3.6.0",
    "esm": "^3.2.25",
    "husky": "^8.0.1",
    "lint-staged": "^13.0.3",
    "np": "~7.6.2",
    "prettier": "^2.7.1",
    "prettier-plugin-astro": "^0.2.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-markdown": "^8.0.3",
    "react-syntax-highlighter": "^15.5.0",
    "rimraf": "^3.0.2",
    "sinon": "^14.0.0",
    "tailwind-scrollbar": "^1.3.1",
    "tailwindcss": "^3.1.7",
    "typedoc": "^0.23.10",
    "typedoc-plugin-markdown": "^3.13.4",
    "typescript": "^4.7.4",
    "uvu": "^0.5.6",
    "watchlist": "^0.3.1"
  },
  "publishConfig": {
    "access": "public",
    "registry": "https://registry.npmjs.org/"
  },
  "np": {
    "yarn": false
  }
}
