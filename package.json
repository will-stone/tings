{
  "name": "tings",
  "version": "0.0.16",
  "private": false,
  "description": "A collection of small utilities and Lodash addons",
  "bugs": {
    "url": "https://github.com/will-stone/tings/issues",
    "email": "email@wstone.io"
  },
  "repository": {
    "url": "https://github.com/will-stone/tings"
  },
  "license": "MIT",
  "author": {
    "name": "Will Stone",
    "email": "email@wstone.io",
    "url": "https://wstone.io"
  },
  "main": "./index.js",
  "scripts": {
    "build": "yarn build:docs && yarn build:code",
    "build:code": "tsc",
    "build:docs": "typedoc && cpy tmp/README.md . && rimraf tmp",
    "clean": "rimraf ./dist",
    "copy-files": "cpy README.md dist/ && cpy package.json dist/",
    "lint": "eslint . --ignore-path .gitignore",
    "release": "yarn clean && yarn lint && yarn build && np --contents=dist",
    "test": "uvu -r ts-node/register tests",
    "test:watch": "watchlist src tests -- yarn test",
    "typecheck": "tsc --noEmit",
    "postversion": "yarn copy-files"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{css,json,md}": [
      "prettier --write"
    ],
    "*.{js,jsx,ts,tsx}": [
      "eslint --fix"
    ]
  },
  "prettier": "@will-stone/prettier-config",
  "eslintConfig": {
    "extends": [
      "@will-stone/eslint-config",
      "@will-stone/eslint-config/node",
      "@will-stone/eslint-config/typescript"
    ]
  },
  "devDependencies": {
    "@types/lodash": "^4.14.159",
    "@will-stone/eslint-config": "^1.19.0",
    "@will-stone/prettier-config": "^3.1.0",
    "cpy-cli": "^3.1.1",
    "eslint": "^7.7.0",
    "husky": "^4.2.5",
    "lint-staged": "^10.2.11",
    "np": "^6.3.2",
    "prettier": "^2.0.5",
    "rimraf": "^3.0.2",
    "ts-node": "^8.10.2",
    "typedoc": "^0.18.0",
    "typedoc-plugin-markdown": "^2.4.2",
    "typescript": "^4.0.2",
    "uvu": "^0.3.3",
    "watchlist": "^0.2.3"
  },
  "peerDependencies": {
    "lodash": "^4.17.20"
  },
  "peerDependenciesMeta": {
    "lodash": {
      "optional": true
    }
  },
  "publishConfig": {
    "access": "public"
  }
}
