{
  "name": "tings-monorepo",
  "private": true,
  "license": "MIT",
  "scripts": {
    "build": "pnpm -r --workspace-concurrency=1 run build",
    "dev": "pnpm -r run dev",
    "lint": "eslint . --ext .js,.jsx,.ts,.tsx,.mjs,.cjs",
    "prepare": "husky install",
    "test": "pnpm -r test"
  },
  "lint-staged": {
    "*.{css,json,md}": [
      "prettier --write"
    ],
    "*.{js,jsx,ts,tsx,cjs,mjs}": [
      "eslint --fix"
    ]
  },
  "prettier": "@will-stone/prettier-config",
  "devDependencies": {
    "@changesets/cli": "^2.25.2",
    "@will-stone/eslint-config-base": "^4.0.0",
    "@will-stone/eslint-config-node": "^2.0.1",
    "@will-stone/eslint-config-prettier": "^2.0.1",
    "@will-stone/eslint-config-react": "^2.1.2",
    "@will-stone/eslint-config-typescript": "^2.1.2",
    "@will-stone/prettier-config": "^6.0.3",
    "eslint": "^8.27.0",
    "eslint-plugin-tailwindcss": "^3.6.2",
    "husky": "^8.0.2",
    "lint-staged": "^13.0.3",
    "prettier": "^2.7.1",
    "typescript": "^4.8.4"
  }
}
