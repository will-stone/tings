{
  "name": "strngs",
  "version": "1.0.0",
  "private": false,
  "description": "String validators",
  "license": "MIT",
  "author": "Will Stone",
  "main": "./dist/index.js",
  "scripts": {
    "prebuild": "rimraf ./dist",
    "build": "yarn lint && yarn build:types && yarn build:js",
    "build:js": "babel src --out-dir dist --extensions \".ts,.tsx\" --source-maps inline",
    "build:types": "tsc --emitDeclarationOnly",
    "lint": "eslint . --ignore-path .gitignore",
    "prerelease": "yarn build",
    "release": "np",
    "typecheck": "tsc --noEmit"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{css,json,md}": [
      "prettier --write"
    ],
    "*.{js,jsx,ts,tsx}": [
      "eslint --fix"
    ]
  },
  "babel": {
    "presets": [
      "@babel/preset-env",
      "@babel/preset-typescript"
    ]
  },
  "browserslist": [
    "maintained node versions"
  ],
  "prettier": "@will-stone/prettier-config",
  "eslintConfig": {
    "extends": [
      "@will-stone/eslint-config",
      "@will-stone/eslint-config/node",
      "@will-stone/eslint-config/jest",
      "@will-stone/eslint-config/typescript"
    ]
  },
  "devDependencies": {
    "@babel/cli": "^7.10.5",
    "@babel/core": "^7.10.5",
    "@babel/preset-env": "^7.10.4",
    "@babel/preset-typescript": "^7.10.4",
    "@will-stone/eslint-config": "^1.17.1",
    "@will-stone/prettier-config": "^3.1.0",
    "eslint": "^7.5.0",
    "husky": "^4.2.5",
    "lint-staged": "^10.2.11",
    "np": "^6.3.2",
    "prettier": "^2.0.5",
    "rimraf": "^3.0.2",
    "typescript": "^3.9.7"
  },
  "np": {
    "contents": "dist"
  }
}
