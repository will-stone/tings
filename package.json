{
  "name": "tings",
  "version": "1.0.1",
  "private": false,
  "description": "A collection of small JavaScript utilities",
  "homepage": "https://tings.wstone.io/",
  "bugs": {
    "url": "https://github.com/will-stone/tings/issues",
    "email": "hello@wstone.io"
  },
  "repository": {
    "url": "https://github.com/will-stone/tings"
  },
  "license": "MIT",
  "author": {
    "name": "Will Stone",
    "email": "hello@wstone.io",
    "url": "https://wstone.io"
  },
  "main": "dist/main.js",
  "module": "dist/module.js",
  "source": "src/index.ts",
  "types": "dist/types.d.ts",
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "npm run clean && parcel build",
    "build:docs": "npm run clean && npm run generate-typedoc && next build && next export --outdir ./docs",
    "clean": "rimraf ./dist ./docs ./node_modules/.cache",
    "generate-typedoc": "rimraf ./typedoc.json && typedoc --json ./typedoc.json --pretty",
    "lint": "eslint . --ignore-path .gitignore",
    "prepare": "husky install",
    "release": "npm run lint && npm run build && np",
    "start:docs": "npm run generate-typedoc && next dev",
    "test": "uvu -r ts-node/register tests",
    "test:watch": "watchlist src tests -- npm run test",
    "typecheck": "tsc --noEmit",
    "watch": "parcel watch"
  },
  "lint-staged": {
    "*.{css,json,md}": [
      "prettier --write"
    ],
    "*.{js,jsx,ts,tsx}": [
      "eslint --fix"
    ]
  },
  "prettier": "@will-stone/prettier-config",
  "eslintConfig": {
    "extends": [
      "@will-stone/eslint-config/typescript",
      "@will-stone/eslint-config/node",
      "@will-stone/eslint-config/react",
      "@will-stone/eslint-config/prettier"
    ],
    "rules": {
      "jsx-a11y/anchor-is-valid": "off"
    }
  },
  "devDependencies": {
    "@fortawesome/fontawesome-svg-core": "^1.2.36",
    "@fortawesome/free-brands-svg-icons": "^5.15.4",
    "@fortawesome/free-solid-svg-icons": "^5.15.4",
    "@fortawesome/react-fontawesome": "^0.1.15",
    "@parcel/packager-ts": "^2.0.0",
    "@parcel/transformer-typescript-types": "^2.0.0",
    "@tailwindcss/typography": "^0.4.1",
    "@types/react": "^17.0.29",
    "@types/sinon": "^10.0.4",
    "@will-stone/eslint-config": "^4.2.2",
    "@will-stone/prettier-config": "^5.0.0",
    "autoprefixer": "^10.3.7",
    "cpy-cli": "^3.1.1",
    "eslint": "^7.24.0",
    "husky": "^7.0.2",
    "lint-staged": "^11.2.3",
    "next": "^11.1.2",
    "np": "^7.5.0",
    "parcel": "^2.0.0",
    "postcss": "^8.3.9",
    "prettier": "^2.4.1",
    "raw-loader": "^4.0.2",
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "react-markdown": "^7.0.1",
    "react-syntax-highlighter": "^15.4.4",
    "rimraf": "^3.0.2",
    "sinon": "^11.1.2",
    "tailwind-scrollbar": "^1.3.1",
    "tailwindcss": "^2.2.17",
    "tinycolor2": "^1.4.2",
    "ts-node": "^10.3.0",
    "typedoc": "^0.22.5",
    "typedoc-plugin-markdown": "^3.11.3",
    "typescript": "^4.4.4",
    "uvu": "^0.5.2",
    "watchlist": "^0.3.1"
  },
  "publishConfig": {
    "access": "public",
    "registry": "https://registry.npmjs.org/"
  },
  "np": {
    "yarn": false
  }
}
