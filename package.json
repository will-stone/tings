{
  "name": "tings",
  "version": "4.1.1",
  "private": false,
  "description": "A collection of small JavaScript utilities",
  "homepage": "https://tings.wstone.uk/",
  "bugs": {
    "url": "https://github.com/will-stone/tings/issues"
  },
  "repository": {
    "url": "https://github.com/will-stone/tings"
  },
  "license": "MIT",
  "author": {
    "name": "Will Stone",
    "email": "hello@wstone.uk",
    "url": "https://wstone.uk"
  },
  "sideEffects": false,
  "main": "./lib/index.js",
  "files": [
    "lib"
  ],
  "scripts": {
    "build": "rimraf ./lib && tsc --noEmit false",
    "build-and-test": "npm run build && npm run test",
    "build:docs": "rimraf ./docs && npm run generate-typedoc && astro build",
    "dev:docs": "npm run generate-typedoc && astro dev",
    "generate-typedoc": "rimraf ./website/data/typedoc.json && typedoc",
    "lint": "eslint .",
    "prepare": "husky install",
    "release": "npm run lint && npm run build && np",
    "test": "uvu -r esm ./tests",
    "test:watch": "watchlist source tests -- npm run build-and-test",
    "typecheck": "tsc --noEmit",
    "version": "npm run build:docs && git add docs"
  },
  "lint-staged": {
    "*.{css,json,md}": [
      "prettier --write"
    ],
    "*.{js,jsx,ts,tsx}": [
      "eslint --fix"
    ]
  },
  "prettier": "@will-stone/prettier-config",
  "eslintConfig": {
    "extends": [
      "@will-stone/eslint-config/typescript",
      "@will-stone/eslint-config/node",
      "@will-stone/eslint-config/react",
      "plugin:tailwindcss/recommended",
      "@will-stone/eslint-config/prettier"
    ],
    "rules": {
      "jsx-a11y/anchor-is-valid": "off",
      "tailwindcss/no-custom-classname": [
        "error",
        {
          "whitelist": [
            "scrollbar",
            "scrollbar-(thumb-.+|track-.+)",
            "lead",
            "language-.+",
            "scroll-(smooth|mt-.+)",
            "prose-invert"
          ]
        }
      ]
    }
  },
  "devDependencies": {
    "@astrojs/react": "^0.1.1",
    "@astrojs/tailwind": "^0.2.1",
    "@babel/types": "^7.17.10",
    "@tailwindcss/typography": "^0.5.0",
    "@types/react": "^17.0.38",
    "@types/sinon": "^10.0.8",
    "@typescript-eslint/eslint-plugin": "^5.10.1",
    "@typescript-eslint/parser": "^5.10.1",
    "@will-stone/eslint-config": "^6.8.2",
    "@will-stone/prettier-config": "^6.0.0",
    "astro": "^1.0.0-beta.27",
    "autoprefixer": "^10.4.2",
    "clsx": "^1.1.1",
    "cpy-cli": "^3.1.1",
    "eslint": "^8.7.0",
    "eslint-plugin-import": "^2.25.4",
    "eslint-plugin-jsx-a11y": "^6.5.1",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-prettier": "^4.0.0",
    "eslint-plugin-react": "^7.28.0",
    "eslint-plugin-react-hooks": "^4.3.0",
    "eslint-plugin-simple-import-sort": "^7.0.0",
    "eslint-plugin-switch-case": "^1.1.2",
    "eslint-plugin-tailwindcss": "^3.3.2",
    "eslint-plugin-unicorn": "^42.0.0",
    "esm": "^3.2.25",
    "husky": "^7.0.4",
    "lint-staged": "^12.3.1",
    "np": "~7.6.0",
    "postcss": "^8.4.5",
    "prettier": "^2.5.1",
    "prettier-plugin-astro": "^0.1.0-next.4",
    "react": "^18.1.0",
    "react-dom": "^18.1.0",
    "react-markdown": "^8.0.0",
    "react-syntax-highlighter": "^15.4.5",
    "rimraf": "^3.0.2",
    "serialize-javascript": "^6.0.0",
    "sinon": "^12.0.1",
    "tailwind-scrollbar": "^1.3.1",
    "tailwindcss": "^3.0.16",
    "typedoc": "^0.22.11",
    "typedoc-plugin-markdown": "^3.11.12",
    "typescript": "^4.5.5",
    "uvu": "^0.5.3",
    "watchlist": "^0.3.1"
  },
  "publishConfig": {
    "access": "public",
    "registry": "https://registry.npmjs.org/"
  },
  "np": {
    "yarn": false
  }
}
